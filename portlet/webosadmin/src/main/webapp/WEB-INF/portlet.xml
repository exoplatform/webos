<portlet-app version="1.0"
   xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
   <portlet>
      <description xml:lang="EN">User Toolbar Desktop Portlet</description>
      <portlet-name>UserToolbarDesktopPortlet</portlet-name>
      <display-name xml:lang="EN">User Toolbar Desktop Portlet</display-name>
      <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>

      <init-param>
         <name>webui.configuration</name>
         <value>/WEB-INF/conf/portlet/exoadmin/UserToolbarDesktopPortlet/webui/configuration.xml</value>
      </init-param>

      <expiration-cache>0</expiration-cache>
      <supports>
         <mime-type>text/html</mime-type>
         <portlet-mode>help</portlet-mode>
      </supports>
      <supported-locale>en</supported-locale>
      <portlet-info>
         <title>User Toolbar Desktop Portlet</title>
         <short-title>UserToolbarDesktopSite</short-title>
         <keywords>gatein_internal</keywords>
      </portlet-info>

      <security-role-ref>
         <role-name>admin</role-name>
         <role-link>admin</role-link>
      </security-role-ref>
   </portlet>
</portlet-app>
