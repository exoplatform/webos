	<portal-skin>
    <skin-name>Default</skin-name>
		<skin-module>WebOSSkin</skin-module>
		<css-path>/skin/Defaultskin/Stylesheet.css</css-path>
	</portal-skin>

   <!-- Temporary use this until we have simple skin design -->
   <portal-skin>
    <skin-name>SimpleSkin</skin-name>
		<skin-module>WebOSSkin</skin-module>
		<css-path>/skin/Defaultskin/Stylesheet.css</css-path>
	</portal-skin>

   <!-- WebosStyle window style -->
   <window-style>
      <style-name>WebosStyle</style-name>
      <style-theme>
         <theme-name>WebosTheme</theme-name>
      </style-theme>
   </window-style>
    
  <scripts>
    <name>webos</name>
    <module>
      <name>eXo.animation.ImplodeExplode</name>
      <path>/javascript/eXo/animation/ImplodeExplode.js</path>
    </module>
    <module>
      <name>eXo.desktop.UIDesktop</name>
      <path>/javascript/eXo/desktop/UIDesktop.js</path>
    </module>
    <module>
      <name>eXo.desktop.UIWindow</name>
      <path>/javascript/eXo/desktop/UIWindow.js</path>
    </module>
    <module>
      <name>eXo.desktop.UIDockbar</name>
      <path>/javascript/eXo/desktop/UIDockbar.js</path>
    </module>
    <depends>
      <scripts>webui</scripts>
    </depends>
  </scripts>
	
</gatein-resources>